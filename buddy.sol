        _baseURI = baseURI_;
    }

    function baseURI() public view returns (string memory) {
        return _baseURI;
    }

    function _updateBaseURI(string memory _BaseURI) internal {
        _setBaseURI(_BaseURI);

        emit BaseURIUpdated(_BaseURI);
    }

